<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.padc.kotlin.ftc.bottomnavigation">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BottomNavigation"
        tools:targetApi="31">
        <activity
            android:name=".activities.ButtonCollectionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- bottom navigation -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

        </activity> <!-- bottom navigation with viewpager + composite view(view_pod) -->
        <activity
            android:name=".activities.BottomNavigationWithViewPager"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

        </activity> <!-- appBar bottom -->
        <activity
            android:name=".activities.AppBarBottomActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

        </activity> <!-- bottom sheet -->
        <activity
            android:name=".activities.BottomSheetActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

        </activity>
        <!-- material components -->
        <activity
            android:name=".activities.OtherCommonUIElementActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

        </activity>

        <!-- collapsing toolbar -->
        <activity
            android:name=".activities.CollapsingToolbarActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">


        </activity>

        <!-- coordinator layout -->
        <activity
            android:name=".activities.CoordinatorActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">


        </activity> <!-- navigation view -->
        <activity
            android:name=".activities.NavigationViewActivity"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">


        </activity> <!-- constraint layout -->
        <activity
            android:name=".activities.ConstraintActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>